<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cst.DataViewer"
          android:versionCode="1"
          android:versionName="1.0">

    <!-- Sockets -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:minSdkVersion="19"/>
    <application android:name=".DataViewerApp" android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name=".controllers.DataViewer"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controllers.IncomingCalls" android:label="Incoming Calls"/>
        <activity android:name=".controllers.OutgoingCalls" android:label="Outgoing Calls"/>
        <activity android:name=".controllers.IncomingSMSes" android:label="Incoming SMSes"/>
        <activity android:name=".controllers.Geolocations" android:label="Geolocations"/>
    </application>
</manifest>
